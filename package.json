{
  "name": "git-ninja",
  "displayName": "Git Ninja",
  "description": "Advanced Git file management tools: exclude files, skip-worktree, and checkout from branches with ease.",
  "version": "1.0.0",
  "publisher": "KabirKhyrul",
  "author": {
    "name": "Git Ninja Team"
  },
  "license": "MIT",
  "homepage": "https://github.com/kabirkhyrul/git-ninja",
  "repository": {
    "type": "git",
    "url": "https://github.com/kabirkhyrul/git-ninja.git"
  },
  "bugs": {
    "url": "https://github.com/kabirkhyrul/git-ninja/issues"
  },
  "keywords": [
    "git",
    "exclude",
    "skip-worktree",
    "checkout",
    "branch",
    "version control",
    "file management",
    "ignore files",
    "git tools"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:git-exclude.toggle-exclude",
    "onCommand:git-exclude.toggle-skip-worktree",
    "onCommand:git-exclude.checkout-from-branch"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-exclude.toggle-exclude",
        "title": "Git: Toggle .git/info/exclude"
      },
      {
        "command": "git-exclude.toggle-skip-worktree",
        "title": "Git: Toggle Skip-Worktree (Ignore Local Changes)"
      },
      {
        "command": "git-exclude.checkout-from-branch",
        "title": "Git: Checkout File from Branch"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "git-exclude.toggle-exclude",
          "when": "resourceScheme == file",
          "group": "1_git"
        },
        {
          "command": "git-exclude.toggle-skip-worktree",
          "when": "resourceScheme == file",
          "group": "1_git"
        },
        {
          "command": "git-exclude.checkout-from-branch",
          "when": "resourceScheme == file",
          "group": "1_git"
        }
      ],
      "scm/resourceState/context": [
        {
          "command": "git-exclude.toggle-exclude",
          "group": "1_git"
        },
        {
          "command": "git-exclude.toggle-skip-worktree",
          "group": "1_git"
        },
        {
          "command": "git-exclude.checkout-from-branch",
          "group": "1_git"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node --watch",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}